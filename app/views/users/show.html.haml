.container.user-page
  %header.user-nav
    .media
      .meida-left
        %a{href: "#"}
          = image_tag @user.avatar.url, style: "width: 64px; height: 64px;"
          -# 下記の記述でも取り出せる。
          -# = image_tag "#{current_user.avatar}", style: "width: 64px; height: 64px;"
          / %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svgxml;base64,", style: "width: 64px; height: 64px;"}
      .meida-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @prototypes.count
            %i Projects
        .proto-user
          %span.degree #{@user.position}
        .row
          .col-md-6
            %h4 Profile
            %p #{@user.profile}
          .col-md-6
            %h4 Works
            %p #{@user.occupation}

.container.proto-list
  .row
    = render partial: "prototypes/prototype", collection: @prototypes

  -#
    静的ページの参考記述残し
    .col-sm-4.col-md-3.proto-content
      .thumbnail
        %a{href: ""}
          =image_tag("sample.png")
          .caption
            %h3 Salvation Army on iPad App Wireframe
            .proto-meta
              .proto-date
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"} iPad
              %li
                %a{href: "#", class: "btn btn-default"} wireframe

.text-center
  =paginate @prototypes, window: 3
