.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/")
      =image_tag("logo.png", alt: "prototypes0", height: "36px")
    .navbar-collapse.collapse.navbar-responsive-collapse
      // not login
      %ul.nav.navbar-nav.navbar-right
        %li
          .btn.btn-primary.navbar-btn
            = link_to "Get Started", new_user_session_path
      // login
      %ul.nav.navbar-nav.navbar-rigth
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", href: "#", role: "button"}
            = current_user.name
            %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li
              = link_to "My Page", user_path(current_user)
            %li
              = link_to "Profile Edit", edit_user_path(current_user)
            %li
              = link_to "Log Out", destroy_user_session_path, method: :delete
        %li
          .btn.btn-primary.navbar-btn
            = link_to "New Proto", new_prototype_path
